<Page
    x:Class="EducationInstitutionsRB.Views.SplashPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- Анимированный контент -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">

            <!-- Анимированная иконка -->
            <Border x:Name="IconBorder" 
                    Width="120" Height="120" 
                    Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                    CornerRadius="20"
                    HorizontalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform x:Name="IconScale" ScaleX="0.5" ScaleY="0.5"/>
                </Border.RenderTransform>
                <Viewbox Width="60" Height="60">
                    <FontIcon Glyph="&#xE8F1;" Foreground="White"/>
                </Viewbox>
            </Border>

            <!-- Текст -->
            <StackPanel>
                <TextBlock x:Name="TitleText" 
                          Text="Образовательные учреждения РБ" 
                          FontSize="24" 
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                          Opacity="0"/>

                <TextBlock x:Name="SubtitleText"
                          Text="Загрузка..." 
                          FontSize="14" 
                          Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                          HorizontalAlignment="Center"
                          Opacity="0"
                          Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Прогресс-бар -->
            <ProgressRing x:Name="LoadingProgress" 
                         Width="40" Height="40"
                         IsActive="True"
                         HorizontalAlignment="Center"
                         Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>